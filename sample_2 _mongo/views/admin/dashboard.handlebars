<div class="container p-3 d-flex justify-content-between">
    <div class="card text-white bg-primary mb-3 w-100 mx-3">
        <div class="card-body">
            <h5 class="card-title">Users</h5>
            <p class="card-text">{{userCount}}</p>
        </div>
    </div>
    <div class="card text-white bg-warning mb-3 w-100 mx-3">
        <div class="card-body">
            <h5 class="card-title">Products</h5>
            <p class="card-text">{{productCount}}</p>
        </div>
    </div>
    <div class="card text-white bg-info mb-3 w-100 mx-3">
        <div class="card-body">
            <h5 class="card-title">Orders</h5>
            <p class="card-text">{{orderCount}}</p>
        </div>
    </div>
</div>